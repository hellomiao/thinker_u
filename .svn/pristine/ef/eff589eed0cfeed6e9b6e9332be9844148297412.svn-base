ini_set('date.timezone', 'Asia/Chongqing');
function Sec2Time($time){
    if(is_numeric($time)){
        $value = array(
           "hours" => 0,
            "minutes" => 0
        );

        if($time >= 3600){
            $value["hours"] = floor($time/3600);
            $time = ($time%3600);
        }
        if($time >= 60){
            $value["minutes"] = floor($time/60);
            $time = ($time%60);
        }

        //return (array) $value;
        $t= $value["hours"] ."小时". $value["minutes"] ."分";
        Return $t;

    }else{
        return (bool) FALSE;
    }
}

echo Sec2Time(3660);