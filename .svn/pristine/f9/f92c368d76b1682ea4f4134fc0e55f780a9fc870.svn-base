namespace app\admin\api;


use app\admin\models\Picture;
use app\api\components\BaseApi;

class PictureList extends BaseApi
{
    protected function rules()
    {
        return [

        ];
    }

    public function run()
    {

        $picture = Picture::find()->all();
        $data = [];

        foreach ($picture as $key => $val) {

            $data[$key] = \Yii::$app->request->hostInfo . $val->getAttachPath();
        }

        return $this->formatData($data);

    }
}